<div class="panel-body">
    <hr>
        {% if listUsersSend is not empty %}
            {% for user in listUsersSend %}
                <p>
                    <a href="{{ path("application_yearbook_updatemessage", { "id" : user.id }) }}">
                        {{ user.surname }} {{ user.name }}
                    </a>

                </p>

            {% endfor %}
        {% endif %}
        {% if listUsersNotSend is not empty %}
            {% for user in listUsersNotSend %}
                <p>
                    <a href="{{ path("application_yearbook_newmessage", { "id" : user.id }) }}">
                        {{ user.surname }} {{ user.name }}
                    </a>

                </p>

            {% endfor %}
        {% endif %}
    {%  if listUsersSend is empty and listUsersNotSend is empty %}
        <p class="alert-warning text-center">Aucune personne trouv√©e.</p>
    {% endif %}
</div>